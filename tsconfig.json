{
  "compilerOptions": {
    "target": "es2024",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2024"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "public",
    ".next"
  ],
  "include": [
    "svg-override.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    ".eslintrc.js",
    "eslint.config.mjs",
    "jest.config.mjs"
  ]
}
